<% content_for :header_title do %>
  Seu Pedido
<% end %>
<% content_for :page_title do %>
  Resumo
<% end %>
<div class="ls-list" id="resume">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <strong>
        <%= @order.product %>
        <% if @order.status == 'closed' %>
          <span class="ls-tag-success">Finalizado</span>
        <% end %>
         <% if @order.status == 'canceled' %>
          <span class="ls-tag-success">Cancelado</span>
        <% end %>
      </strong>
      <small>Fake Product Name I </small>
    </div>
  </header>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Plano</span>
      <strong><%= @order.plan %></strong>
    </div>
    <div class="col-xs-12 col-md-3">
      <span class="ls-list-label">Periodicidade</span>
      <strong id='period'><%= @order.period %></strong>
    </div>
     <div class="col-xs-12 col-md-3">
      <span class="ls-list-label">Valor</span>
      <strong id='price'><%= @order.price %></strong>
     </div>
  </div>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <% if @order.payment.boleto %>
        <span class="ls-list-label">Pagamento</span>
        <strong id='boleto'>Boleto</strong>
      <% else %>
        <span class="ls-list-label">Pagamento</span>
        <strong id='credit'>Cartão de crédito</strong>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Vendedor</span>
      <strong id='seller'><%= @order.seller.nickname if @order.seller %></strong>
    </div>
  </div>
</div>
