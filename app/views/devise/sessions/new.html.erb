<section id='sign-in-form'>
  <%= form_for(resource, as: resource_name,
                         url: session_path(resource_name),
                         class: 'ls-form row') do |f| %>
    <fieldset>
      <%= devise_error_messages! %>
      <%= f.label :email, class: 'ls-label col-md-3' do %>
        <b class="ls-label-text"><%= t('activerecord.attributes.user.email') %></b>
        <%= f.email_field :email, autofocus: true %>
      <% end %>

      <%= f.label :password, class: 'ls-label col-md-3' do %>
        <b class="ls-label-text"><%= t('activerecord.attributes.user.password') %></b>
        <%= f.password_field :password, autocomplete: "off" %>
      <% end %>

        <% if devise_mapping.rememberable? -%>
        <div class="ls-label col-md-3">
          <label class="ls-label-text">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end -%>

      <div class="ls-actions-btn">
        <%= f.submit t('buttons.sign_in'), class: 'ls-btn' %>
      </div>
    </fieldset>
  <% end %>
</section>
